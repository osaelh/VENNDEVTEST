@model Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" class="img-thumbnail" alt="@Model.Name" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Name</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Model.Price.ToString("0.0")</span>
            </span>
        </div>
        <span class="text-muted mr-3">
           
            @Model.Price
        </span>
        <span class="text-muted">
            <i class="bi bi-film"></i>
            @Model.Tag.Name
        </span>
        <p class="text-justify mt-3">@Model.Description</p>
    </div>
</div>